{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false, // true
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@types/webpack",
      "@types/webpack-env",
      "@types/modernizr",
      "@nuxt/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}